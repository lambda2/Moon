/**
 * This class will be able to generate Complex emails.
 * @author lambda2
 */
class Mail {
    public $to = array();
    public $from = '';
    public $cc = array();
    public $bcc = array();
    public $subject = '';
    public $text = '';
    public $htmlText = null;
    protected $boundary;
    protected $files = array();;

    public function __construct($from, $to, $subject)
    {
        $this->to = $to;
        $this->from = $from;
        $this->subject = $subject;
        $this->boundary = md5(uniqid(microtime(), TRUE));
    }

